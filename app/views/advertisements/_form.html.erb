<div id="respond">
<h3>New Advertsiment</h3>
 <%= form_with(model: advertisement, local: true) do |form| %>
  <div class="form-group">
    <label for="exampleInputEmail1">Title</label>
    <%= form.text_field :title, id: :advertisement_title,class: "form-control" %>
  </div>
  <div class="form-group">
    <label for="exampleInputFile">Image</label>
    <%= form.file_field :image, id: :advertisement_image %>
  </div>

  <div class="form-group">
    <label for="exampleInputFile">Is visible</label>
    <%= form.check_box :is_visible, id: :advertisement_is_visible %>
  </div>


  <%= form.submit "submit" ,class: "btn btn-default" %>
    <button type="Reset" class="btn btn-default">Reset</button>
  <%end%>
</div>    


   <style type="text/css">
     #respond{
      margin: 5% !important;
     }
   </style>


